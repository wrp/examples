#!/bin/bash

start=0
incr=30

while
	curl -Ssf -G \
		-d startAt=${start} \
		-d maxResults=${incr} \
		-H 'Content-Type: application/json' \
		-u "${EMAIL?}:${JIRA_TOKEN?}" \
		"${JIRA_URL?}/rest/api/2/component" \
	| jq '.values[], .isLast' \
	| awk '$0 == "false" {exit 0} $0 == "true" {exit 1} 1'
do
	: $(( start += $incr ))
done \
| { echo '{"id": "id", "name": "name", "description": "description"}'; cat ; } \
| jq -rc '[ .id, .name, .description ] | @tsv'
