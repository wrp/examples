#!/bin/sh

die() { echo "unexpected output: $1"; exit 1; } >&2
t=$(./pyramid)
test "$t" = "$(cat << EOF
     0
    101
   21012
  3210123
 432101234
54321012345
EOF
)" || die "$t"

t=$(./pyramid 9)
test "$t" = "$(cat << EOF
         0
        101
       21012
      3210123
     432101234
    54321012345
   6543210123456
  765432101234567
 87654321012345678
9876543210123456789
EOF
)" || die "$t"
