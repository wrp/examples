#!/bin/sh

# Test arithperm

out=$(./arithperm 1 2 3)
if test "$out" != '((1 + 2) + 3) = 6
((1 - 2) + 3) = 2
((1 * 2) + 3) = 5
((1 / 2) + 3) = 3.5
((1 + 2) - 3) = 0
((1 - 2) - 3) = -4
((1 * 2) - 3) = -1
((1 / 2) - 3) = -2.5
((1 + 2) * 3) = 9
((1 - 2) * 3) = -3
((1 * 2) * 3) = 6
((1 / 2) * 3) = 1.5
((1 + 2) / 3) = 1
((1 - 2) / 3) = -0.333333
((1 * 2) / 3) = 0.666667
((1 / 2) / 3) = 0.166667
((1 + 3) + 5) = 6
((1 - 3) + -1) = 0
((1 * 3) + 6) = 7
((1 / 3) + 0.666667) = 1.66667
((1 + 3) - 5) = -4
((1 - 3) - -1) = 2
((1 * 3) - 6) = -5
((1 / 3) - 0.666667) = 0.333333
((1 + 3) * 5) = 5
((1 - 3) * -1) = -1
((1 * 3) * 6) = 6
((1 / 3) * 0.666667) = 0.666667
((1 + 3) / 5) = 0.2
((1 - 3) / -1) = -1
((1 * 3) / 6) = 0.166667
((1 / 3) / 0.666667) = 1.5'
then
	echo "Got unexpected: '$out'" >&2
	exit 1
fi
