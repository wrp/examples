#!/bin/sh

: ${PROJECT?PROJECT must be defined}
instance_name=${1?Give name as first param}

gcloud compute --project ${PROJECT} \
	instances create ${instance_name} \
	--zone=us-central1-a \
	--machine-type=n1-standard-1 \
	--image=wepay-centos7-v8 \
	--maintenance-policy MIGRATE \
	--min-cpu-platform Automatic \
	--boot-disk-size 100 \
	--boot-disk-type pd-standard \
	--boot-disk-device-name ${instance_name} \
	--create-disk=name=${instance_name}-ext1,size=512GB

exit
# Related REST

curl https://www.googleapis.com/compute/v1/projects/liquid-champion-135823/zones/us-central1-b/instances -X POST -d '
{
  "name": "dev-1",
  "zone": "projects/liquid-champion-135823/zones/us-central1-b",
