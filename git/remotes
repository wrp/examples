# Use a name other than origin
$ git clone --origin $remote_name $url

# Delete a branch on remote
$ git push $remote --delete $remote_branch

# Create local branch to track existing branch on remote
$ git fetch $remote
$ git checkout -t -b $local_branch $remote/$remote_branch

# Make extant local branch track branch on remote
$ git branch -u $remote/$remote_branch $local_branch

# Create remote branch
$ git push $remote $local_branch                  # creates remote with same name
$ git push --set-upstream $remote $local_branch  # untested

# Push local branch to differently named remote branch (possibly creating remote_branch)
$ git push $remote $local_branch:$remote_branch

# Delete a tag from a remote
$ git push --delete $remote $tag
