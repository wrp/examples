systemctl poweroff  # power down the machine shutdown/halt/
systemctl reboot    # power down the machine/restart/shutdown
systemctl halt      # halt machine, but hardware still drains battery


# Get the pid of a service
systemctl show -p MainPID ${service_name?}.service | cut -d = -f 2

# Show all available units
systemctl list-unit-files

